@model MockInterviews.Models.User

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
        }

        .card {
            border-radius: 20px;
        }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(255, 99, 132, 0.5);
            border-color: #ff6384;
        }

        .btn-primary {
            background-color: #ff6384;
            border-color: #ff6384;
        }

            .btn-primary:hover {
                background-color: #e25573;
            }

        .text-secondary-link {
            color: #6c757d;
            text-decoration: none;
        }

            .text-secondary-link:hover {
                text-decoration: underline;
                color: #333;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-5" style="width: 450px;">
            <h3 class="text-center mb-4">Create an Account</h3>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display:none;"></div>

            <!-- Registration Form -->
            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" asp-for="Email" id="email" class="form-control" placeholder="Enter your email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Enter your password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="Re-enter your password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="role" class="form-label fw-semibold">Role</label>
                    <select asp-for="Role" id="role" class="form-select">
                        <option value="Candidate">Candidate</option>
                        <option value="Interviewer">Interviewer</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
            </form>

            <!-- Additional Links -->
            <div class="text-center mt-4">
                <span class="text-muted">Already have an account?</span>
                <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold text-decoration-none">Login</a>
            </div>
        </div>
    </div>

    <script>// Display validation summary if errors exist
        document.querySelectorAll('[asp-validation-summary]').forEach(el => {
            if (el.querySelectorAll('.text-danger').length > 0) {
                el.style.display = 'block';
            }
        });</script>
</body>
</html>
