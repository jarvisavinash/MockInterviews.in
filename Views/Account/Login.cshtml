@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-light">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
            <h3 class="text-center mb-4">Welcome Back</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <!-- Google Login Button -->
            <div class="text-center mb-3">
                <a href="@Url.Action("LoginWithGoogle", "Login")" class="btn btn-outline-secondary w-100">
                    <i class="fab fa-google me-2"></i> Login with Google
                </a>
            </div>

            <div class="text-center mb-3">
                <span>or login with your credentials</span>
            </div>

            <!-- Login Form -->
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="mb-3">
                    <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required>
                </div>
                <div class="mb-3">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <!-- Additional Links -->
            <div class="text-center mt-4">
                <a href="#" class="text-decoration-none">Forgot Password?</a>
            </div>
            <div class="text-center mt-3">
                <span>Don't have an account?</span>
                <a href=# class="text-decoration-none text-primary fw-bold">Register</>
            </div>
        </div>
    </div>
</body>
</html>
