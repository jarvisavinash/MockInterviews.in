@model IEnumerable<MockInterviews.Models.Topic>

@{
    Layout = "_Layout"; // Ensure you're using a layout with Bootstrap linked
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Manage Topics</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Topic
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" style="width: 10%;">#</th>
                            <th scope="col" style="width: 70%;">Name</th>
                            <th scope="col" style="width: 20%;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No topics available. Please add some topics.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var topic in Model)
                            {
                                <tr>
                                    <td>@topic.Id</td>
                                    <td>@topic.Name</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@topic.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@topic.Id" class="btn btn-danger btn-sm ms-2">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
